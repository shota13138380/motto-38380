<div class="main">
  <div class="inner">
    <div class="follow__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.name}さんのフォロー" %>
      </h2>
      <% @users.each do |user| %>
        <div class="follow-card">
          <div class="follow-card__left">
            <%= link_to user_path(user) do %>
              <i class="fa-solid fa-user"></i><%= user.name %>
            <% end %>
          </div>
          <div class="follow-card__right">
            <%= user.items.count %>件の投稿
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>