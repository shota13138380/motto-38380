<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.name}さんの情報" %>
      </h2>
      <% if user_signed_in? %>
        <div class="user__manage">
          <% if current_user.id == @user.id %>
            <%= link_to "編集する", edit_user_path(@user.id), class: :user__btn %>
            <%= link_to "退会する", root_path, class: :user__btn %>
          <% else %>
            <%= link_to "フォロー", root_path, class: :user__btn %>
          <% end %>
        </div>
      <% end %>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{@user.name}さんの投稿" %>
      </h2>
      <div class="user__card">
        <%= render partial: "items/item", collection: @items %>
      </div>
    </div>
  </div>
</div>