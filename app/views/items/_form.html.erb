<%= form_with model: @item_form,  url: url, method: method, id: 'new_item', local: true do |f| %>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="field">
    <%= f.label :name, "アイテム名" %><br />
    <%= f.text_field :name, id:"item_name" %>
  </div>

  <div class="field">
    <%= f.label :content, "内容" %><br />
    <%= f.text_area :content, class: :form__text, id:"item_content" %>
  </div>

  <div class="field">
    <%= f.label :tag_name, "タグ" %><br />
    <%= f.text_area :tag_name, id:"item_tag" %>
    <div id="search-result"></div>
  </div>

  <div class="field">
    <%= f.label :image, "アイテム画像" %><br />
    <%= f.file_field :image, id:"item_image" %>
  </div>

  <div class="field">
  <%= f.label :privacy_id, "公開範囲" %><br />
  <%= f.collection_select(:privacy_id, Privacy.all, :id, :name, {}) %>
  </div>

  <div class="actions">
    <%= f.submit "投稿する", class: :form__btn  %>
  </div>
<% end %>