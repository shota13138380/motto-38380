<div class="card">
  <% if item.image.attached? %>
    <%= link_to image_tag(item.image, class: :card__img ), root_path %>
  <% else %>
    <%= link_to image_tag('noimage.jpg', class: :card__img ), root_path %>
  <% end %>
  <div class="card__body">
    <%= link_to item.name, root_path, class: :card__title%>
    <%= link_to "by #{item.user.name}", root_path, class: :card__user %>
  </div>
</div>