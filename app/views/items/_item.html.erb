<div class="card">
  <% if item.image.attached? %>
    <% @image = item.image%>
  <% else %>
    <% @image = 'noimage.jpg' %>
  <% end %>
  <%= link_to image_tag(@image, class: :card__img ), item_path(item.id) %>
  <div class="card__body">
    <%= link_to item.name, item_path(item.id), class: :card__title%>
    <%= link_to "by #{item.user.name}", user_path(item.user.id), class: :card__user %>
  </div>
</div>